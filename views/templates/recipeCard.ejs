<a href="/recipe/<%= recipe.id %>" >
  <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col-auto">
        <img src="<%= recipe.image %>" class="img-fluid recipe-image" alt="Recipe Image">
      </div>
    <div class="col p-4 d-flex flex-column position-static">
      <strong class="d-inline-block mb-2 text-dark"><%= recipe.title %></strong>
      <p class="card-text mb-auto">Ingredients: <%= allIngredients %></p>
    </div>
  </div>
</a>    