<%- include("templates/header") %>
<div class="container" style="max-width: 800px; margin-top: 20px;">
  <h1 class="text-center">Hello, <%= username %>!</h1>
  <div id="recom" style="background-color: rgb(236, 241, 223);padding-top: 10px;box-shadow: 2px 2px 10px #888888;margin-bottom: 20px;">
    <p style="font-weight: bold;" >The selection of Preppal</p>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="background-color:bisque;">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/recom/1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/recom/2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/recom/3.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <div id="favorite" class="col" style="background-color: bisque;padding-top: 10px;box-shadow: 2px 2px 10px #888888;margin-bottom: 20px;">
    <p style="font-weight: bold;" >Your favorite</p>
    <div class="card" style="width: 100%;">
      <div class="card" >
        <img src="/favorite.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title" style="text-align: center;">Taco</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Check</a>
        </div>
      </div>
    </div>
  </div>
  <div id="top10" style="background-color: rgba(245, 249, 226, 0.864);padding-top: 10px;box-shadow: 2px 2px 10px #888888;margin-bottom: 20px;">
      <p>this is a placeholder for dataset</p>
  </div>

  <div class="d-grid gap-2">
    <button type="button" class="btn btn-success rounded-pill px-3" style="margin-bottom: 50px;">BROWSING ALL</button>
  </div>
  <style>
    body {
        margin-bottom: 50px;
    }
  </style>
</div>
<%- include("templates/footer") %>
