<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<%- include("templates/header") %>
<div class="container">
  <div class="card mb-3 p-3 bg-light" style="background-color: rgba(245, 249, 226, 0.864);">
    <div class="card mb-3">
      <div class="row g-0 flex-wrap">
        <div class="col-md-4 text-center d-flex align-items-center justify-content-center">
          <img src="<%= details.image %>" class="img-fluid" alt="Recipe Image">
        </div>
        <div class="col-md-8">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="card-title"><%= recipe.title %></h1>
            <div class="d-flex justify-content-end ml-auto">
              <form method="POST" action="/favorite">
                <button id="favoriteButton" class="btn btn-outline-danger btn-sm">
                  <span class="material-symbols-outlined">favorite</span>
                </button>
              </form>
            </div>
          </div>
          <div><%- details.summary %></div>
        </div>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-body">
        <h2 class="card-title">Recipe Details</h2>
        <div class="row">
          <div class="col-4">
            <p>Health Score: <%= details.healthScore %> </p>
          </div>
          <div class="col-4">
            <p>Cook time: <%= details.readyInMinutes %>m</p>
          </div>
          <div class="col-4">
            <p>Weight Watcher Smart Points: <%= details.weightWatcherSmartPoints %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-body">
        <h2 class="card-title">Ingredients</h2>
        <ul class="list-unstyled">
          <% ingredients.forEach(function(ingredient) { %>
            <li><%= ingredient.original %></li>
          <% }); %>
        </ul>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-body">
        <h2 class="card-title">Nutritional Information</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Calories</th>
              <th>Protein</th>
              <th>Carbs</th>
              <th>Fat</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= nutrition.nutrients[0].amount%><%= nutrition.nutrients[0].unit%></td>
              <td><%= nutrition.nutrients[8].amount%><%= nutrition.nutrients[8].unit%></td>
              <td><%= nutrition.nutrients[3].amount%><%= nutrition.nutrients[3].unit%></td>
              <td><%= nutrition.nutrients[1].amount%><%= nutrition.nutrients[1].unit%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card mb-3">
      <div class="card-body">
        <h2 class="card-title">Instructions</h2>
      <ol>
        <% instructions.forEach(function(step, index) { %>
          <li><%= index+1 %>. <%= step.step %></li>
        <% }); %>
      </ol>
    </div>
  </div>
</div>
</div>
<script src="/recipe.js"></script>
<%- include("templates/footer") %>    
